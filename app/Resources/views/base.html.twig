{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Ideas Plateforme{% endblock %}</title>

    {% block stylesheets %}
        {# On charge le CSS de bootstrap depuis le site directement #}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
</head>

<body>
<div class="container">
    <div id="header" class="jumbotron">
        <h1>Ma plateforme d'idées</h1>
        <p>
            <a class="btn btn-primary btn-lg" href="{{ path('api_rest_login') }}">
                Connexion
            </a>
            <a class="btn btn-primary btn-lg" href="{{ path('api_rest_signup') }}">
                Inscription
            </a>
        </p>
    </div>

    <div class="row">
        <div id="menu" class="col-md-3">
            <h3>Les Idées</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('api_rest_home') }}">Accueil</a></li>
                <li><a href="{{ path('api_rest_add') }}">Ajouter une idée</a></li>
            </ul>

            <h4>Dernières annonces</h4>
            {{ render(controller("APIRestBundle:Idea:menu", {'limit': 3})) }}
        </div>
        <div id="content" class="col-md-9">
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <hr>

    <footer>
        <p>Designed By Yani with Twitter Bottstrap, and 3 little birds © {{ 'now'|date('Y') }}.</p>
    </footer>
</div>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>